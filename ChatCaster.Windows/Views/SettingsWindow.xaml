<Window x:Class="ChatCaster.Windows.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatCaster - Настройки" 
        Height="700" Width="800"
        MinHeight="600" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="#FF1E1E1E"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/DarkTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <Ellipse Width="32" Height="32" Fill="#FF0078D4" Margin="0,0,12,0"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Настройки ChatCaster" FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Конфигурация голосового ввода" FontSize="12" Foreground="#FFAAAAAA"/>
            </StackPanel>
        </StackPanel>

        <!-- Вкладки настроек -->
        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="#FF3C3C3C"/>
                    <Setter Property="Foreground" Value="#FFCCCCCC"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="16,8"/>
                    <Setter Property="Margin" Value="0,0,4,0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border" 
                                      Background="{TemplateBinding Background}"
                                      CornerRadius="8,8,0,0"
                                      Padding="{TemplateBinding Padding}">
                                    <ContentPresenter ContentSource="Header"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#FF0078D4"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#FF555555"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Вкладка Аудио -->
            <TabItem Header="🎤 Аудио">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                    <StackPanel>
                        
                        <!-- Настройки микрофона -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Настройки микрофона" Style="{StaticResource HeaderTextStyle}"/>
                                
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Порог громкости:" Style="{StaticResource LabelStyle}"/>
                                    <Slider x:Name="VolumeThresholdSlider" Grid.Column="1" 
                                          Minimum="0.001" Maximum="0.1" Value="0.01"
                                          Style="{StaticResource DarkSliderStyle}" Margin="8,0"/>
                                    <TextBlock Grid.Column="2" x:Name="VolumeValueText" Text="1.0%" 
                                             Style="{StaticResource LabelStyle}" HorizontalAlignment="Center"/>
                                </Grid>

                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Частота записи:" Style="{StaticResource LabelStyle}"/>
                                    <Slider x:Name="SampleRateSlider" Grid.Column="1" 
                                          Minimum="8000" Maximum="48000" Value="16000"
                                          Style="{StaticResource DarkSliderStyle}" Margin="8,0"/>
                                    <TextBlock Grid.Column="2" x:Name="SampleRateText" Text="16kHz" 
                                             Style="{StaticResource LabelStyle}" HorizontalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Настройки записи -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Параметры записи" Style="{StaticResource HeaderTextStyle}"/>
                                
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Макс. длительность:" Style="{StaticResource LabelStyle}"/>
                                    <Slider x:Name="MaxRecordingSlider" Grid.Column="1" 
                                          Minimum="1" Maximum="30" Value="10"
                                          Style="{StaticResource DarkSliderStyle}" Margin="8,0"/>
                                    <TextBlock Grid.Column="2" x:Name="MaxRecordingText" Text="10с" 
                                             Style="{StaticResource LabelStyle}" HorizontalAlignment="Center"/>
                                </Grid>

                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Тайм-аут тишины:" Style="{StaticResource LabelStyle}"/>
                                    <Slider x:Name="SilenceTimeoutSlider" Grid.Column="1" 
                                          Minimum="1" Maximum="30" Value="10"
                                          Style="{StaticResource DarkSliderStyle}" Margin="8,0"/>
                                    <TextBlock Grid.Column="2" x:Name="SilenceTimeoutText" Text="10с" 
                                             Style="{StaticResource LabelStyle}" HorizontalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Вкладка Whisper -->
            <TabItem Header="🗣️ Распознавание">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                    <StackPanel>
                        
                        <!-- Настройки Whisper -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Модель Whisper" Style="{StaticResource HeaderTextStyle}"/>
                                
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Модель:" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox x:Name="WhisperModelComboBox" Grid.Column="1" 
                                            Style="{StaticResource DarkComboBoxStyle}"
                                            ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}"
                                            Height="32" Margin="8,0,0,0"/>
                                </Grid>

                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Язык:" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox x:Name="LanguageComboBox" Grid.Column="1" 
                                            Style="{StaticResource DarkComboBoxStyle}"
                                            ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}"
                                            Height="32" Margin="8,0,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Продвинутые настройки -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Продвинутые настройки" Style="{StaticResource HeaderTextStyle}"/>
                                
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Макс. токенов:" Style="{StaticResource LabelStyle}"/>
                                    <Slider x:Name="MaxTokensSlider" Grid.Column="1" 
                                          Minimum="50" Maximum="500" Value="224"
                                          Style="{StaticResource DarkSliderStyle}" Margin="8,0"/>
                                    <TextBlock Grid.Column="2" x:Name="MaxTokensText" Text="224" 
                                             Style="{StaticResource LabelStyle}" HorizontalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Вкладка Интерфейс -->
            <TabItem Header="🖥️ Интерфейс">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                    <StackPanel>
                        
                        <!-- Настройки overlay -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Overlay индикатор" Style="{StaticResource HeaderTextStyle}"/>
                                
                                <CheckBox x:Name="EnableOverlayCheckBox" 
                                        Content="Показывать overlay во время записи" 
                                        Style="{StaticResource DarkCheckBoxStyle}" 
                                        IsChecked="True" Margin="0,0,0,12"/>

                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Позиция:" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox x:Name="OverlayPositionComboBox" Grid.Column="1" 
                                            Style="{StaticResource DarkComboBoxStyle}"
                                            ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}"
                                            Height="32" Margin="8,0,0,0"/>
                                </Grid>

                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Прозрачность:" Style="{StaticResource LabelStyle}"/>
                                    <Slider x:Name="OverlayOpacitySlider" Grid.Column="1" 
                                          Minimum="10" Maximum="100" Value="90"
                                          Style="{StaticResource DarkSliderStyle}" Margin="8,0"/>
                                    <TextBlock Grid.Column="2" x:Name="OverlayOpacityText" Text="90%" 
                                             Style="{StaticResource LabelStyle}" HorizontalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Настройки уведомлений -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Уведомления" Style="{StaticResource HeaderTextStyle}"/>
                                
                                <CheckBox x:Name="ShowNotificationsCheckBox" 
                                        Content="Показывать уведомления" 
                                        Style="{StaticResource DarkCheckBoxStyle}" 
                                        IsChecked="True" Margin="0,0,0,8"/>

                                <CheckBox x:Name="MinimizeToTrayCheckBox" 
                                          Content="Кнопка закрытия (X) сворачивает в трей" 
                                          Style="{StaticResource DarkCheckBoxStyle}" 
                                          IsChecked="True" 
                                          Margin="0,0,0,8"
                                          ToolTip="Если включено: кнопка X сворачивает в трей&#x0a;Если выключено: кнопка X закрывает приложение" />
                                
                                <CheckBox x:Name="StartWithWindowsCheckBox" 
                                        Content="Запускать с Windows" 
                                        Style="{StaticResource DarkCheckBoxStyle}" 
                                        IsChecked="False" Margin="0,0,0,8"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Вкладка Геймпад -->
            <TabItem Header="🎮 Управление">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                    <StackPanel>
                        
                        <!-- Настройки геймпада -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Геймпад" Style="{StaticResource HeaderTextStyle}"/>
                                
                                <CheckBox x:Name="EnableGamepadCheckBox" 
                                        Content="Включить поддержку геймпада" 
                                        Style="{StaticResource DarkCheckBoxStyle}" 
                                        IsChecked="True" Margin="0,0,0,12"/>

                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Частота опроса:" Style="{StaticResource LabelStyle}"/>
                                    <Slider x:Name="GamepadPollingSlider" Grid.Column="1" 
                                          Minimum="1" Maximum="100" Value="16"
                                          Style="{StaticResource DarkSliderStyle}" Margin="8,0"/>
                                    <TextBlock Grid.Column="2" x:Name="GamepadPollingText" Text="16ms" 
                                             Style="{StaticResource LabelStyle}" HorizontalAlignment="Center"/>
                                </Grid>

                                <TextBlock Text="Комбинация для записи:" Style="{StaticResource LabelStyle}" Margin="0,8,0,4"/>
                                <Border Background="#FF1E1E1E" CornerRadius="4" Padding="12" 
                                      BorderBrush="#FF555555" BorderThickness="1">
                                    <TextBlock x:Name="GamepadShortcutText" 
                                             Text="LB + RB (по умолчанию)" 
                                             Foreground="White" FontSize="14"/>
                                </Border>
                                
                                <Button Content="🔧 Настроить комбинацию" 
                                      Style="{StaticResource ModernButtonStyle}"
                                      Click="ConfigureGamepadShortcut_Click" 
                                      HorizontalAlignment="Left" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Горячие клавиши -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Горячие клавиши" Style="{StaticResource HeaderTextStyle}"/>
                                
                                <CheckBox x:Name="EnableHotkeysCheckBox" 
                                        Content="Включить глобальные горячие клавиши" 
                                        Style="{StaticResource DarkCheckBoxStyle}" 
                                        IsChecked="False" Margin="0,0,0,12"/>

                                <TextBlock Text="Комбинация для записи:" Style="{StaticResource LabelStyle}" Margin="0,8,0,4"/>
                                <Border Background="#FF1E1E1E" CornerRadius="4" Padding="12" 
                                      BorderBrush="#FF555555" BorderThickness="1">
                                    <TextBlock x:Name="HotkeyText" 
                                             Text="Ctrl + Shift + V (по умолчанию)" 
                                             Foreground="White" FontSize="14"/>
                                </Border>
                                
                                <Button Content="🔧 Настроить горячие клавиши" 
                                      Style="{StaticResource ModernButtonStyle}"
                                      Click="ConfigureHotkeys_Click" 
                                      HorizontalAlignment="Left" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" Background="#FF2D2D30" CornerRadius="4" 
                Padding="16,12" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="🔄 Сбросить" Click="ResetButton_Click" 
                          Style="{StaticResource ModernButtonStyle}" 
                          Background="#FF444444" Margin="0,0,8,0"/>
                    <Button Content="📁 Экспорт настроек" Click="ExportButton_Click" 
                          Style="{StaticResource ModernButtonStyle}" 
                          Background="#FF444444"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="❌ Отмена" Click="CancelButton_Click" 
                          Style="{StaticResource ModernButtonStyle}" 
                          Background="#FF666666" Margin="0,0,8,0"/>
                    <Button Content="✅ Применить" Click="ApplyButton_Click" 
                          Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>