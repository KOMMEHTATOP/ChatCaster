<Page x:Class="ChatCaster.Windows.Views.ViewSettings.ControlSettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Unloaded="Page_Unloaded">

    <ScrollViewer Padding="30" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="800">

            <!-- Header секция -->
            <StackPanel Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <ui:SymbolIcon Symbol="Games24"
                                   FontSize="28"
                                   Foreground="#1ba1e2"
                                   Margin="0,0,15,0" />
                    <TextBlock Text="Управление"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center" />
                </StackPanel>
                <TextBlock Text="Кликните на поле комбинации и нажмите нужные кнопки"
                           FontSize="14"
                           Foreground="#cccccc" />
            </StackPanel>

            <!-- Статус загрузки -->
            <TextBlock Text="{Binding StatusMessage}"
                       FontSize="14"
                       Foreground="#1ba1e2"
                       Margin="0,0,0,15"
                       Visibility="{Binding IsLoadingUI, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <!-- Настройки управления -->
            <Border Margin="0,0,0,20"
                    CornerRadius="12"
                    MinHeight="200">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2d2d30" Offset="0" />
                        <GradientStop Color="#3a3a3d" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid Margin="25">
                    <StackPanel>

                        <!-- Геймпад секция с улучшенным UI -->
                        <StackPanel Margin="0,0,0,30">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <ui:SymbolIcon Symbol="Games20"
                                               FontSize="18"
                                               Foreground="#1ba1e2"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center" />
                                <TextBlock Text="Геймпад:"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           VerticalAlignment="Center" />

                                <!-- Таймер обратного отсчета -->
                                <Border Background="#ff6b6b"
                                        CornerRadius="10"
                                        Padding="8,4"
                                        Margin="10,0,0,0"
                                        Visibility="{Binding ShowGamepadTimer, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <ui:SymbolIcon Symbol="Clock12"
                                                       FontSize="14"
                                                       Foreground="White"
                                                       Margin="0,0,4,0" />
                                        <TextBlock Text="{Binding GamepadCaptureTimeLeft}"
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   Foreground="White" />
                                        <TextBlock Text="с"
                                                   FontSize="12"
                                                   Foreground="White"
                                                   Margin="2,0,0,0" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Поле геймпад комбинации -->
                            <Border x:Name="GamepadComboBorder"
                                    Background="#404040"
                                    BorderBrush="#606060"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="15,12"
                                    Margin="0,0,0,8"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="GamepadComboBorder_Click"
                                    IsEnabled="{Binding IsWaitingForGamepadInput, Converter={StaticResource InverseBooleanConverter}}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#505050" />
                                                <Setter Property="BorderBrush" Value="#1ba1e2" />
                                            </Trigger>
                                            <DataTrigger Binding="{Binding IsWaitingForGamepadInput}" Value="True">
                                                <Setter Property="BorderBrush" Value="#ff6b6b" />
                                                <Setter Property="Background" Value="#4a2c2c" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding GamepadComboText}"
                                               FontSize="16"
                                               FontWeight="Medium"
                                               Foreground="{Binding GamepadComboTextColor}"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center" />

                                    <!-- Индикатор захвата для геймпада -->
                                    <Border Background="{Binding GamepadComboTextColor}"
                                            Width="15"
                                            Height="15"
                                            CornerRadius="8"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            Visibility="{Binding IsWaitingForGamepadInput, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Border.RenderTransform>
                                            <ScaleTransform />
                                        </Border.RenderTransform>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsWaitingForGamepadInput}" Value="True">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard x:Name="GamepadPulseStoryboard">
                                                                <Storyboard RepeatBehavior="Forever">
                                                                    <DoubleAnimation
                                                                        Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                                        From="1" To="1.5" Duration="0:0:0.8"
                                                                        AutoReverse="True" />
                                                                    <DoubleAnimation
                                                                        Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                                        From="1" To="1.5" Duration="0:0:0.8"
                                                                        AutoReverse="True" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <StopStoryboard BeginStoryboardName="GamepadPulseStoryboard" />
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <Ellipse Width="10" Height="10"
                                         Fill="{Binding GamepadStatusColor}"
                                         Margin="0,0,8,0" />
                                <TextBlock Text="{Binding GamepadStatusText}"
                                           FontSize="13"
                                           Foreground="{Binding GamepadStatusColor}" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Клавиатура секция с улучшенным UI -->
                        <StackPanel Margin="0,0,0,30">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <ui:SymbolIcon Symbol="Keyboard24"
                                               FontSize="18"
                                               Foreground="#1ba1e2"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center" />
                                <TextBlock Text="Клавиатура:"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           VerticalAlignment="Center" />

                                <!-- Таймер обратного отсчета для клавиатуры -->
                                <Border Background="#ff6b6b"
                                        CornerRadius="10"
                                        Padding="8,4"
                                        Margin="10,0,0,0"
                                        Visibility="{Binding ShowKeyboardTimer, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <ui:SymbolIcon Symbol="Clock12"
                                                       FontSize="14"
                                                       Foreground="White"
                                                       Margin="0,0,4,0" />
                                        <TextBlock Text="{Binding KeyboardCaptureTimeLeft}"
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   Foreground="White" />
                                        <TextBlock Text="с"
                                                   FontSize="12"
                                                   Foreground="White"
                                                   Margin="2,0,0,0" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Поле клавиатуры комбинации -->
                            <Border x:Name="KeyboardComboBorder"
                                    Background="#404040"
                                    BorderBrush="#606060"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="15,12"
                                    Margin="0,0,0,8"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="KeyboardComboBorder_Click"
                                    IsEnabled="{Binding IsWaitingForKeyboardInput, Converter={StaticResource InverseBooleanConverter}}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#505050" />
                                                <Setter Property="BorderBrush" Value="#1ba1e2" />
                                            </Trigger>
                                            <DataTrigger Binding="{Binding IsWaitingForKeyboardInput}" Value="True">
                                                <Setter Property="BorderBrush" Value="#ff6b6b" />
                                                <Setter Property="Background" Value="#4a2c2c" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding KeyboardComboText}"
                                               FontSize="16"
                                               FontWeight="Medium"
                                               Foreground="{Binding KeyboardComboTextColor}"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center" />

                                    <!-- Индикатор захвата для клавиатуры -->
                                    <Border Background="{Binding KeyboardComboTextColor}"
                                            Width="15"
                                            Height="15"
                                            CornerRadius="8"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            Visibility="{Binding IsWaitingForKeyboardInput, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Border.RenderTransform>
                                            <ScaleTransform />
                                        </Border.RenderTransform>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsWaitingForKeyboardInput}" Value="True">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard x:Name="KeyboardPulseStoryboard">
                                                                <Storyboard RepeatBehavior="Forever">
                                                                    <DoubleAnimation
                                                                        Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                                        From="1" To="1.5" Duration="0:0:0.8"
                                                                        AutoReverse="True" />
                                                                    <DoubleAnimation
                                                                        Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                                        From="1" To="1.5" Duration="0:0:0.8"
                                                                        AutoReverse="True" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <StopStoryboard BeginStoryboardName="KeyboardPulseStoryboard" />
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>                                
                                </StackPanel>
                            </Border>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <Ellipse Width="10" Height="10"
                                         Fill="{Binding KeyboardStatusColor}"
                                         Margin="0,0,8,0" />
                                <TextBlock Text="{Binding KeyboardStatusText}"
                                           FontSize="13"
                                           Foreground="{Binding KeyboardStatusColor}" />
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>