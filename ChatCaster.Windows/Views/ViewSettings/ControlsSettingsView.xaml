<Page x:Class="ChatCaster.Windows.Views.ViewSettings.ControlSettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Unloaded="Page_Unloaded">
    
    <ScrollViewer Padding="30" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="800">
            
            <!-- Header секция -->
            <StackPanel Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <ui:SymbolIcon Symbol="Games24" 
                                   FontSize="28" 
                                   Foreground="#1ba1e2"
                                   Margin="0,0,15,0"/>
                    <TextBlock Text="Управление" 
                               FontSize="24" 
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Кликните на поле комбинации и нажмите нужные кнопки" 
                           FontSize="14"
                           Foreground="#cccccc"/>
            </StackPanel>

            <!-- Статус загрузки -->
            <TextBlock Text="{Binding StatusMessage}" 
                       FontSize="14"
                       Foreground="#1ba1e2"
                       Margin="0,0,0,15"
                       Visibility="{Binding IsLoadingUI, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <!-- Настройки управления -->
            <Border Margin="0,0,0,20" 
                    CornerRadius="12"
                    MinHeight="200">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2d2d30" Offset="0"/>
                        <GradientStop Color="#3a3a3d" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid Margin="25">
                    <StackPanel>
                        
                        <!-- Геймпад секция -->
                        <StackPanel Margin="0,0,0,30">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <ui:SymbolIcon Symbol="Games20" 
                                               FontSize="18" 
                                               Foreground="#1ba1e2"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                <TextBlock Text="Геймпад:" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Поле геймпад комбинации -->
                            <Border x:Name="GamepadComboBorder"
                                    Background="#404040" 
                                    BorderBrush="#606060"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="15,12"
                                    Margin="0,0,0,8"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="GamepadComboBorder_Click"
                                    IsEnabled="{Binding IsWaitingForGamepadInput, Converter={StaticResource InverseBooleanConverter}}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#505050"/>
                                                <Setter Property="BorderBrush" Value="#1ba1e2"/>
                                            </Trigger>
                                            <DataTrigger Binding="{Binding IsWaitingForGamepadInput}" Value="True">
                                                <Setter Property="BorderBrush" Value="#ff9800"/>
                                                <Setter Property="Background" Value="#4a4a00"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding GamepadComboText}" 
                                           FontSize="16"
                                           FontWeight="Medium"
                                           Foreground="White"
                                           HorizontalAlignment="Left"/>
                            </Border>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <Ellipse Width="10" Height="10" 
                                         Fill="{Binding GamepadStatusColor}"
                                         Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding GamepadStatusText}" 
                                           FontSize="13"
                                           Foreground="{Binding GamepadStatusColor}"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Клавиатура секция -->
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <ui:SymbolIcon Symbol="Keyboard20" 
                                               FontSize="18" 
                                               Foreground="#1ba1e2"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                <TextBlock Text="Клавиатура:" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Поле клавиатурной комбинации -->
                            <Border x:Name="KeyboardComboBorder"
                                    Background="#404040" 
                                    BorderBrush="#606060"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="15,12"
                                    Margin="0,0,0,8"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="KeyboardComboBorder_Click"
                                    IsEnabled="{Binding IsWaitingForKeyboardInput, Converter={StaticResource InverseBooleanConverter}}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#505050"/>
                                                <Setter Property="BorderBrush" Value="#1ba1e2"/>
                                            </Trigger>
                                            <DataTrigger Binding="{Binding IsWaitingForKeyboardInput}" Value="True">
                                                <Setter Property="BorderBrush" Value="#ff9800"/>
                                                <Setter Property="Background" Value="#4a4a00"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding KeyboardComboText}"
                                           FontSize="16"
                                           FontWeight="Medium"
                                           Foreground="White"
                                           HorizontalAlignment="Left"/>
                            </Border>
                            
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Info16" 
                                               FontSize="14" 
                                               Foreground="#888888"
                                               Margin="0,0,6,0"
                                               VerticalAlignment="Center"/>
                                <TextBlock Text="Кликните и нажмите нужную комбинацию клавиш" 
                                           FontSize="13"
                                           Foreground="#888888"/>
                            </StackPanel>
                        </StackPanel>
                        
                    </StackPanel>
                </Grid>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</Page>