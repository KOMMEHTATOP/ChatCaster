<Page x:Class="ChatCaster.Windows.Views.ViewSettings.InterfaceSettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800">
    
    <ScrollViewer Padding="30" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="800">
            
            <!-- Header секция -->
            <StackPanel Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <ui:SymbolIcon Symbol="Desktop24" 
                                   FontSize="28" 
                                   Foreground="#1ba1e2"
                                   Margin="0,0,15,0"/>
                    <TextBlock Text="Интерфейс" 
                               FontSize="24" 
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Настройка overlay индикатора и системных параметров" 
                           FontSize="14"
                           Foreground="#cccccc"/>
            </StackPanel>

            <!-- Основные настройки -->
            <Border Margin="0,0,0,20" 
                    CornerRadius="12"
                    MinHeight="200">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2d2d30" Offset="0"/>
                        <GradientStop Color="#3a3a3d" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid Margin="25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0">
                        
                        <!-- Overlay индикатор -->
                        <TextBlock Text="Overlay индикатор" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,15"/>
                        
                        <!-- Показывать overlay -->
                        <CheckBox x:Name="ShowOverlayCheckBox"
                                  Content="Показывать overlay во время записи"
                                  FontSize="14"
                                  Foreground="#e0e0e0"
                                  Margin="0,0,0,20"
                                  IsChecked="True"/>
                        
                        <!-- Позиция overlay -->
                        <Grid Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="Позиция:" 
                                       FontSize="14" 
                                       FontWeight="Medium"
                                       Foreground="#e0e0e0"
                                       VerticalAlignment="Center"/>
                            
                            <ComboBox Grid.Column="1" 
                                      x:Name="OverlayPositionComboBox"
                                      FontSize="14"
                                      IsEnabled="{Binding IsChecked, ElementName=ShowOverlayCheckBox}">
                                <ComboBoxItem Content="Верхний левый" Tag="TopLeft"/>
                                <ComboBoxItem Content="Верхний центр" Tag="TopCenter"/>
                                <ComboBoxItem Content="Верхний правый" Tag="TopRight" IsSelected="True"/>
                                <ComboBoxItem Content="Средний левый" Tag="MiddleLeft"/>
                                <ComboBoxItem Content="Центр" Tag="MiddleCenter"/>
                                <ComboBoxItem Content="Средний правый" Tag="MiddleRight"/>
                                <ComboBoxItem Content="Нижний левый" Tag="BottomLeft"/>
                                <ComboBoxItem Content="Нижний центр" Tag="BottomCenter"/>
                                <ComboBoxItem Content="Нижний правый" Tag="BottomRight"/>
                                <ComboBoxItem Content="Произвольная" Tag="Custom"/>
                            </ComboBox>
                        </Grid>
                        
                        <!-- Прозрачность overlay -->
                        <Grid Margin="0,0,0,30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Видимость:" 
                                       FontSize="14" 
                                       FontWeight="Medium"
                                       Foreground="#e0e0e0"
                                       VerticalAlignment="Center"/>

                            <Slider Grid.Column="1" 
                                    x:Name="OverlayOpacitySlider"
                                    Minimum="0" 
                                    Maximum="100" 
                                    Value="90"
                                    TickFrequency="10"
                                    IsSnapToTickEnabled="False"
                                    Margin="10,0"
                                    IsEnabled="{Binding IsChecked, ElementName=ShowOverlayCheckBox}"/>

                            <TextBlock Grid.Column="2" 
                                       x:Name="OverlayOpacityValueText"
                                       Text="90%" 
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="#1ba1e2"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                        
                        <!-- Системные настройки -->
                        <StackPanel>
                            <CheckBox x:Name="ShowNotificationsCheckBox"
                                      Content="Показывать уведомления"
                                      FontSize="14"
                                      Foreground="#e0e0e0"
                                      Margin="0,0,0,7"/>
                            
                            <CheckBox x:Name="MinimizeToTrayCheckBox"
                                      Content="Кнопка закрытия (X) сворачивает в трей"
                                      FontSize="14"
                                      Foreground="#e0e0e0"
                                      Margin="0,0,0,7"
                                      IsChecked="True"/>
                            
                            <CheckBox x:Name="StartWithWindowsCheckBox"
                                      Content="Запускать с Windows"
                                      FontSize="14"
                                      Foreground="#e0e0e0"
                                      Margin="0,0,0,7"/>
                            
                            <CheckBox x:Name="StartMinimizedCheckBox"
                                      Content="Запускать свернутым в трей"
                                      FontSize="14"
                                      Foreground="#e0e0e0"/>
                        </StackPanel>
                        
                    </StackPanel>
                </Grid>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</Page>