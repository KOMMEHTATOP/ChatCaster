{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "ChatCaster.SpeechRecognition.Whisper": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "TestSettings": {
    "ModelDirectory": "models",
    "PreferredModelSize": "tiny",
    "MaxTestDuration": 300,
    "EnableStressTests": true,
    "EnableMemoryTests": true,
    "TestIterations": {
      "MemoryLeak": 10,
      "Performance": 5,
      "Concurrent": 4
    },
    "AudioGeneration": {
      "ShortDuration": 3.0,
      "MediumDuration": 10.0,
      "LongDuration": 25.0,
      "BaseFrequency": 440.0
    }
  },
  "WhisperConfig": {
    "ModelSize": "tiny",
    "Language": "auto",
    "Temperature": 0.0,
    "ThreadCount": 2,
    "UseVAD": true,
    "EnableGpu": false,
    "RecognitionTimeoutSeconds": 30,
    "InitializationTimeoutSeconds": 60
  }
}